            { name: "SC RII EXECUTE", url: "https://www.mediafire.com/file/1wiokbz709zofg4/ð•½ð–Žð–Žð•°ð–ð–Šð–ˆð–šð–™ð–Š+6.0+KING+ENC.zip/file", type: "script" },
            { name: "PAIMON", url: "https://www.mediafire.com/file/hhup3fb4adb3pkp/ð—‰É‘â…°ð—†â²Ÿn+v10.zip/file", type: "script" },
            { name: "SC BUG GACORRRR", url: "https://www.mediafire.com/file/jgyvagzmlkev1i5/ðŸŽ­âƒŸà¼‘âŒâ­šð—›Íð—®ð—±ð—²Í¢ð¬_ð™“ð™«Í‹ð™¡ð™¤ð™žð™™à½€Í¡ÍœðŸŒ¹_V1_5_No_enc.zip/file", type: "script" }
        ];

        // Variabel global
        let gachaCount = 10;
        let prizesWon = 0;
        let totalGacha = 0;
        let currentPrize = null;
        const correctPassword = "SubscribeDanxzzy";

        // Elemen DOM
        const gachaDisplay = document.getElementById('gachaDisplay');
        const gachaItem = document.getElementById('gachaItem');
        const gachaCountElement = document.getElementById('gachaCount');
        const singleGachaBtn = document.getElementById('singleGacha');
        const multiGachaBtn = document.getElementById('multiGacha');
        const prizesGrid = document.getElementById('prizesGrid');
        const passwordModal = document.getElementById('passwordModal');
        const passwordInput = document.getElementById('passwordInput');
        const submitPasswordBtn = document.getElementById('submitPassword');
        const notification = document.getElementById('notification');
        const prizesWonElement = document.getElementById('prizesWon');
        const badLuckLevelElement = document.getElementById('badLuckLevel');
        const goodLuckLevelElement = document.getElementById('goodLuckLevel');
        const badLuckBar = document.getElementById('badLuckBar');
        const goodLuckBar = document.getElementById('goodLuckBar');

        // Inisialisasi
        document.addEventListener('DOMContentLoaded', function() {
            updateGachaCount();
            renderPrizes();
            updateStats();
            
            // Event listeners
            singleGachaBtn.addEventListener('click', performSingleGacha);
            submitPasswordBtn.addEventListener('click', checkPassword);
            
            // Cek apakah sudah melebihi batas gacha hari ini
            checkGachaLimit();
        });

        // Render daftar hadiah
        function renderPrizes() {
            prizesGrid.innerHTML = '';
            
            prizes.forEach(prize => {
                const prizeCard = document.createElement('div');
                prizeCard.className = 'prize-card';
                prizeCard.innerHTML = `
                    <h3>${prize.name}</h3>
                    <p>Klik untuk membuka hadiah ini</p>
                    <a href="#" class="prize-link" data-url="${prize.url}">Buka Hadiah</a>
                `;
                
                prizeCard.querySelector('.prize-link').addEventListener('click', function(e) {
                    e.preventDefault();
                    currentPrize = prize;
                    showPasswordModal();
                });
                
                prizesGrid.appendChild(prizeCard);
            });
        }

        // Update tampilan jumlah gacha
        function updateGachaCount() {
            gachaCountElement.textContent = gachaCount;
            
            if (gachaCount <= 0) {
                singleGachaBtn.disabled = true;
                multiGachaBtn.disabled = true;
            } else {
                singleGachaBtn.disabled = false;
            }
        }

        // Update statistik
        function updateStats() {
            prizesWonElement.textContent = prizesWon;
            
            // Hitung tingkat keberuntungan dan kesialan
            const badLuckPercentage = totalGacha > 0 ? Math.round((totalGacha - prizesWon) / totalGacha * 100) : 0;
            const goodLuckPercentage = totalGacha > 0 ? Math.round(prizesWon / totalGacha * 100) : 0;
            
            badLuckLevelElement.textContent = `${badLuckPercentage}%`;
            goodLuckLevelElement.textContent = `${goodLuckPercentage}%`;
            
            // Update bar
            badLuckBar.style.width = `${badLuckPercentage}%`;
            goodLuckBar.style.width = `${goodLuckPercentage}%`;
            
            // Update kelas untuk warna
            badLuckBar.className = 'luck-fill';
            goodLuckBar.className = 'luck-fill';
            
            if (badLuckPercentage < 40) {
                badLuckBar.classList.add('low');
            } else if (badLuckPercentage < 70) {
                badLuckBar.classList.add('medium');
            } else {
                badLuckBar.classList.add('high');
            }
            
            if (goodLuckPercentage < 40) {
                goodLuckBar.classList.add('low');
            } else if (goodLuckPercentage < 70) {
                goodLuckBar.classList.add('medium');
            } else {
                goodLuckBar.classList.add('high');
            }
        }

        // Lakukan gacha sekali
        function performSingleGacha() {
            if (gachaCount <= 0) {
                showNotification("Kesempatan gacha hari ini sudah habis! Tunggu hingga jam 00:00 untuk reset.", "error");
                return;
            }
            
            // Animasi gacha
            gachaItem.textContent = "?";
            gachaItem.classList.remove('show');
            
            setTimeout(() => {
                // 50% kemungkinan zonk, 50% kemungkinan dapat hadiah
                const isZonk = Math.random() < 0.5;
                
                if (isZonk) {
                    gachaItem.textContent = "ZONK";
                    gachaItem.style.color = "#ff6b6b";
                    showNotification("Anda mendapatkan ZONK! Coba lagi.", "error");
                } else {
                    const randomPrize = prizes[Math.floor(Math.random() * prizes.length)];
                    gachaItem.textContent = "HADIAH!";
                    gachaItem.style.color = "#4ade80";
                    showNotification(`Selamat! Anda mendapatkan ${randomPrize.name}`, "success");
                    createConfetti();
                    
                    // Update statistik
                    prizesWon++;
                    
                    // Tampilkan modal password untuk hadiah
                    currentPrize = randomPrize;
                    setTimeout(() => {
                        showPasswordModal();
                    }, 1500);
                }
                
                gachaItem.classList.add('show');
                
                // Kurangi jumlah gacha dan update statistik
                gachaCount--;
                totalGacha++;
                updateGachaCount();
                updateStats();
                saveGachaData();
            }, 1000);
        }

        // Tampilkan modal password
        function showPasswordModal() {
            passwordModal.style.display = 'flex';
            passwordInput.value = '';
            passwordInput.focus();
        }

        // Tutup modal password
        function closePasswordModal() {
            passwordModal.style.display = 'none';
        }

        // Cek password
        function checkPassword() {
            const enteredPassword = passwordInput.value.trim();
            
            if (enteredPassword === correctPassword) {
                showNotification("Password benar! Mengarahkan ke hadiah...", "success");
                closePasswordModal();
                
                // Redirect ke URL hadiah setelah delay
                setTimeout(() => {
                    window.open(currentPrize.url, '_blank');
                }, 1500);
            } else {
                showNotification("Password salah! Coba lagi.", "error");
                passwordInput.value = '';
                passwordInput.focus();
            }
        }

        // Tampilkan notifikasi
        function showNotification(message, type) {
            notification.textContent = message;
            notification.className = `notification ${type}`;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Buat efek confetti
        function createConfetti() {
            const colors = ['#ff6b6b', '#ffa36c', '#ffde7d', '#4ade80', '#38bdf8', '#a78bfa'];
            
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.animation = `confetti ${Math.random() * 3 + 2}s linear forwards`;
                document.body.appendChild(confetti);
                
                setTimeout(() => {
                    confetti.remove();
                }, 5000);
            }
        }

        // Simpan data gacha ke localStorage
        function saveGachaData() {
            const today = new Date().toDateString();
            const gachaData = {
                date: today,
                count: gachaCount,
                prizesWon: prizesWon,
                totalGacha: totalGacha
            };
            
            localStorage.setItem('gachaData', JSON.stringify(gachaData));
        }

        // Cek batas gacha
        function checkGachaLimit() {
            const today = new Date().toDateString();
            const savedData = localStorage.getItem('gachaData');
            
            if (savedData) {
                const gachaData = JSON.parse(savedData);
                
                // Jika data dari hari yang sama, gunakan count yang tersisa
                if (gachaData.date === today) {
                    gachaCount = gachaData.count;
                    prizesWon = gachaData.prizesWon || 0;
                    totalGacha = gachaData.totalGacha || 0;
                    updateGachaCount();
                    updateStats();
                } else {
                    // Jika hari baru, reset count
                    gachaCount = 10;
                    prizesWon = 0;
                    totalGacha = 0;
                    updateGachaCount();
                    updateStats();
                    saveGachaData();
                }
            }
        }

        // Event listener untuk menutup modal dengan ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closePasswordModal();
            }
        });

        // Event listener untuk menutup modal dengan klik di luar
        passwordModal.addEventListener('click', function(e) {
            if (e.target === passwordModal) {
                closePasswordModal();
            }
        });
    </script>
</body>
</html>
